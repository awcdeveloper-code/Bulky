@model Category

<form method="post">
    <div class="border p-3 mt4">
        <div class="row pb-2">
            <h2 class="text-primary">Borrar Categoría</h2>
        </div>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Name" class="p-0" />
        <input asp-for="Name" disabled class="form-control" />
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="DisplayOrder" class="p-0" />
        <input asp-for="DisplayOrder" disabled class="form-control" />
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">
                <i class="bi bi-trash-fill"></i> Borrar
            </button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-secondary form-control">
                <i class="bi bi-backspace"></i> Regresar
            </a>
        </div>
    </div>
</form>
