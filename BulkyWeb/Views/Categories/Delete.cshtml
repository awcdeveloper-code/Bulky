@using Bulky.Models
@model Category

<div class="card shadow bordeer-0">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Borrar Categoría</h2>
            </div>
        </div>
    </div>
</div>
<div class="card-body p-4">
    <form method="post" class="row">
        <input asp-for="Id" hidden />
        <div class="border p-3">
            <div asp-validation-summary="All"></div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Name" disabled class="form-control border-0 shadow" />
                <label asp-for="Name" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="DisplayOrder" disabled class="form-control border-0 shadow" />
                <label asp-for="DisplayOrder" class="ms-2"></label>
            </div>
            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">
                        <i class="bi bi-trash"></i> Borrar
                    </button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-primary border form-control">
                        <i class="bi bi-backspace"></i> Regresar
                    </a>
                </div>
            </div>
        </div>
    </form>

</div>


