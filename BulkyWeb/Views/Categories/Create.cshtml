@model Category

<form method="post">
    <div class="border p-3 mt4">
        <div class="row pb-2">
            <h2 class="text-primary">Crear Categoría</h2>
        </div>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="mb-3 row p-1">
        <label asp-for="Name" class="p-0" />
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="DisplayOrder" class="p-0" />
        <input asp-for="DisplayOrder" class="form-control" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">
                <i class="bi bi-plus-circle"></i> Crear
            </button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-secondary form-control">
                <i class="bi bi-backspace"></i> Regresar
            </a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}